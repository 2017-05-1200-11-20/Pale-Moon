DEPTH		= @DEPTH@
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

FORCE_STATIC_LIB = 1
LIBXUL_LIBRARY  = 1

VPATH += \
  $(srcdir)/image/decode \
  $(srcdir)/image/sys \
  $(srcdir)/jxrglue \
  $(NULL) 

CSRCS += \
    decode.c \
    postprocess.c \
    segdec.c \
    strInvTransform.c \
    strPredQuantDec.c \
    strdec.c \
#    image/decode/strdec_x86.c \
    adapthuff.c \
    image.c \
    strPredQuant.c \
    strTransform.c \
    strcodec.c \
    JXRGlue.c \
    JXRGlueDec.c \
    JXRGluePFC.c \
    JXRMeta.c \
    $(NULL)

# JPEG-XR decoder needs header files located in these directories
LOCAL_INCLUDES += \
    -I$(topsrcdir)/image/jxrlib/image/sys \
    -I$(topsrcdir)/image/jxrlib/include \
    -I$(topsrcdir)/image/jxrlib/jxrglue \
    $(NULL)

include $(topsrcdir)/config/rules.mk

